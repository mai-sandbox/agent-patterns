# LLM API Keys
# Anthropic API Key (preferred LLM provider)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Alternative LLM providers (uncomment if needed)
# OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_API_KEY=your_google_api_key_here

# LangSmith Configuration (optional for tracing and monitoring)
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=form-filling-agent

# Form Processing Configuration
# Maximum number of form sections to process
MAX_FORM_SECTIONS=10

# Validation settings
STRICT_VALIDATION=true

# LLM Model Configuration
# Model name for Anthropic (default: claude-3-5-sonnet-20241022)
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Temperature for LLM responses (0.0 to 1.0)
LLM_TEMPERATURE=0.1

# Maximum tokens for LLM responses
MAX_TOKENS=1000

# Application Configuration
# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=false

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
