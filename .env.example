# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Chatbot Configuration
# Model to use for the chatbot (default: claude-3-haiku-20240307)
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Maximum tokens for responses (default: 1000)
MAX_TOKENS=1000

# Temperature for response generation (0.0-1.0, default: 0.7)
TEMPERATURE=0.7

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO

# Enable/disable detailed logging (true/false, default: false)
DEBUG_MODE=false
