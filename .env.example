# LangGraph Agent Environment Variables
# Copy this file to .env and fill in your actual values

# LangGraph Server Configuration
LANGGRAPH_SERVER_URL=http://localhost:8123

# LLM Provider API Keys (choose one or more based on your needs)
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional: Other LLM Provider Keys
# GOOGLE_API_KEY=your_google_api_key_here
# COHERE_API_KEY=your_cohere_api_key_here

# Development Settings
# Set to 'development' for local development, 'production' for deployment
ENVIRONMENT=development

# Optional: Custom System Prompt Override
# DEFAULT_SYSTEM_PROMPT="You are a helpful AI assistant with access to tools."

# Optional: Logging Configuration
LOG_LEVEL=INFO

# Optional: Streamlit Configuration
# STREAMLIT_SERVER_PORT=8501
# STREAMLIT_SERVER_ADDRESS=localhost
